 <body>

    <nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <a class="navbar-brand" href="/" style="color:#323947">Schoodle </a>
      <a href="/"><img id="logo-icon" src="/resources/SchoodleIconTransparent.png"></a>
      <!-- <img class="chickin" src="/resources/chickin.png"> -->
    </div>
  </div>
