<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Schoodle - Create Event</title>

    <!-- Font -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,400i,600,600i" rel="stylesheet">

    <!-- Date Picker -->
    <link href = "https://code.jquery.com/ui/1.10.4/themes/redmond/jquery-ui.css" rel = "stylesheet">

    <!-- CSS for NavBar -->
    <link rel="stylesheet" type="text/css" href="/styles/header.css">

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <!-- styling elements -->
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/create.css" type="text/css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">

    <!-- JS files -->
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/create.js"></script>
    <script type="text/javascript" src="/scripts/validate.js"></script>
    <script type="text/javascript" src="/scripts/url-popup.js"></script>
    <script type="text/javascript" src="/scripts/datepicker.js"></script>

    <script src = "https://code.jquery.com/ui/1.10.4/jquery-ui.js"></script>

    <!-- timepicker -->
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.css">
    <script src="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>


  </head>

  <body>

    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/" style="color:#323947">Schoodle </a>
          <a href="/"><img id="logo-icon" src="/resources/SchoodleIconTransparent.png"></a>
        </div>
      </div>
    </nav>
    <form action="/events" method="POST">
      <main class="container">
        <section class="alert">
          <p class="title-alert"></p>
          <p class="description-alert"></p>
          <p class="date-alert"></p>
        </section>
        <section class="create-event">
          <h1>Create Event</h1>
          <textarea class="title" name="title" placeholder="event title"></textarea>
          <textarea class="description" name="description" placeholder="event description"></textarea>
          <div>Select Dates: <input name="day" class ="date" type="input" /></div>
          <button type="submit" class="button">create</button>
        </section>
        <section class="space"></section>
      </main>
      <section class="date-and-time">
        <div class='categories'>
          <p>Dates</p>
          <p style="padding-left: 45px">Start Time</p>
          <p>End Time</p>
        </div>
        <p class="days"></p>
      </section>
    <footer id="footer" style="position: absolute;">
      <div class="container">
        <div class=”row bottom-rule”>
          <p class="footerText">&#169; 2018 Nelima. All rights reserved.</p>
        </div>
      </div><!-- end container -->
    </footer>
  </body>

</html>
